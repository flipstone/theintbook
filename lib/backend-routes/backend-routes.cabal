category:            Web
build-type:          Simple
-- extra-source-files:  
cabal-version:       >=1.10

library
  exposed-modules:     IntBook.Backend.Routes
                     , IntBook.Data.IntId

  default-extensions:  FlexibleInstances
                     , OverloadedStrings
                     , TypeOperators
                     , TemplateHaskell

  -- other-modules:       
