  build-depends:       base >=4.8 && <4.9
                     , boomerang >= 1.4
                     , bytestring >= 0.10
                     , text >= 1.2
                     , web-routes >= 0.27
                     , web-routes-boomerang >= 0.28

  if impl(ghcjs)
    build-depends:      ghcjs-base >= 0.2.0.0

  hs-source-dirs:      src
  default-language:    Haskell2010
